{
    "name": "css-percent",
    "displayName": "CSS-Percent",
    "description": "cover your px to precent",
    "version": "0.0.1",
    "publisher": "morehardy",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:vue",
        "onLanguage:css",
        "onLanguage:less",
        "onLanguage:scss",
        "onLanguage:sass",
        "onLanguage:stylus",
        "onLanguage:tpl"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "CSS-Percent configuration",
            "properties": {
                "CSSPercent.designWidth": {
                    "type": "number",
                    "default": 1920,
                    "description": "design page's width (unit: px), default: 1920"
                },
                "CSSPercent.fixedDigits": {
                    "type": "number",
                    "default": 4,
                    "description": "Px to percent decimal point maximum length, default: 4"
                },
                "CSSPercent.designHeight": {
                    "type": "number",
                    "default": 1080,
                    "description": "design page's height (unit: px), default: 1080"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
